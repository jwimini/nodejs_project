        padding-bottom: 40px;
      }
      #setting {
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0px;
        display: flex;
        visibility: hidden;
      }

      #background {
        background-color: black;
        opacity: 50%;
        width: 80%;
        height: 100%;
      }

      #menu {
        background-color: white;
        width: 20%;
        height: 100%;
