        padding-bottom: 40px;
      }
      #setting {
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0px;
        display: flex;
        visibility: hidden;
      }

      #background {
        background-color: black;
        opacity: 50%;
        width: 80%;
        height: 100%;
      }

      #menu {
        background-color: white;
        width: 20%;
        height: 100%;
        padding-left: 20px;
        padding-right: 20px;
      }

      #menu button {
        float: right;
        position: fixed;
        background-color: white;
        border: 0px;
        right: 0px;
        top: 18px;
      }

      #btn {
        background-color: white;
        border: 0px;
      }
      #profile {
        display: flex;
        margin-top: 50px;
        align-items: center;
      }
      #id_name {
        display: block;
        margin-left: 10px;
      }
      #name {
        font-size: 14pt;
        margin-bottom: 3px;
      }
      #id {
        font-size: 12pt;
        color: gray;
      }
      #profile img {
        border-radius: 50%;
        background-color: black;
      }
      #menu p {
        font-size: 18px;
        padding-left: 8px;
        padding-right: 8px;
        margin-top: 15px;
        margin-bottom: 15px;
      }
      .active {
        background-color: gray;
      }
    </style>
